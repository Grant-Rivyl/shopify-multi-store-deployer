{% style %}
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top | times: 0.45 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.45 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
        .section-{{ section.id }}-padding {
            padding-top: {{ section.settings.padding_top }}px;
            padding-bottom: {{ section.settings.padding_bottom }}px;
        }
    }
    
    @media screen and (max-width: 749px) {
      section.image-with-text-v2__section .page-width .image-with-text-v2__wrapper {
        flex-direction:{{ section.settings.mobile_view }};
  }
}
{% endstyle %}  

<section class="image-with-text-v2__section">
    <div class="page-width">
        <div class="image-with-text-v2__wrapper">
            <div class="image-box">
                <img src="{{ section.settings.image | image_url }}" alt="">
            </div>
            <div class="content-box section-{{ section.id }}-padding">
                <h3 class="{{ section.settings.heading_size }} text-color--white">{{ section.settings.heading }}</h3>
                <span class="text-color--white">
                    {{ section.settings.sub_text }}
                </span>
            </div>
        </div>
    </div>
</section>

{% schema %}
{
    "name": "Image with text V2",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image Logo"
        },
        {
            "type": "inline_richtext",
            "id": "heading",
            "label": "t:sections.newsletter.blocks.heading.settings.heading.label"
        },
        {
            "type": "select",
            "id": "heading_size",
            "options": [
                {
                    "value": "h3",
                    "label": "t:sections.all.heading_size.options__1.label"
                },
                {
                    "value": "h2",
                    "label": "t:sections.all.heading_size.options__2.label"
                },
                {
                    "value": "h1",
                    "label": "t:sections.all.heading_size.options__3.label"
                }
            ],
            "default": "h1",
            "label": "t:sections.all.heading_size.label"
        },
        {
            "type": "richtext",
            "id": "sub_text",
            "default": "t:sections.newsletter.blocks.paragraph.settings.paragraph.default",
            "label": "t:sections.newsletter.blocks.paragraph.settings.paragraph.label"
        },
        {
            "type": "select",
            "label": "Mobile View",
            "id": "mobile_view",
            "default": "column",
            "options": [
                {
                "value": "column-reverse",
                "label": "Image Bottom"
                },
                {
                "value": "column",
                "label": "Image Top"
                }
            ]
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 150,
            "step": 5,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 95
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 150,
            "step": 5,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 95
        }
    ],
    "presets": [
        {
            "name": "Image with text V2"
        }
    ]
}
{% endschema %}