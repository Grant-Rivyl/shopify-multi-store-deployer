{% style %}
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top | times: 1 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.59 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
        .section-{{ section.id }}-padding {
            padding-top: {{ section.settings.padding_top }}px;
            padding-bottom: {{ section.settings.padding_bottom }}px;
        }
    }
{% endstyle %}

<section class="contact-form-v2__section section-{{ section.id }}-padding">
    <div class="image-wrapper">
        <img src="{{ section.settings.block_image | image_url }}" alt="">
    </div>
    <div class="page-width">
        <div class="contact-form-v2__wrapper">
            <div class="left-side-box">
                <p class="text-color--deep_purple upper-text">{{ section.settings.up_text }}</p>
                <h2 class="{{ section.settings.heading_size }} text-color--burnt_orange">{{ section.settings.heading }}</h2>
                <span class="text-color--deep_purple">{{ section.settings.sub_text }}</span>
                {% if section.settings.show_email %}
                    <div class="with-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <path d="M20 4H4C2.897 4 2 4.897 2 6V18C2 19.103 2.897 20 4 20H20C21.103 20 22 19.103 22 18V6C22 4.897 21.103 4 20 4ZM20 6V6.511L12 12.734L4 6.512V6H20ZM4 18V9.044L11.386 14.789C11.5611 14.9265 11.7773 15.0013 12 15.0013C12.2227 15.0013 12.4389 14.9265 12.614 14.789L20 9.044L20.002 18H4Z" fill="#1A0E31"/>
                        </svg>
                        <p class="text-color--deep_purple">
                            {{ section.settings.email_text }}
                        </p>
                    </div>
                {% endif %}
                {% if section.settings.show_phone %}
                    <div class="with-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <path d="M17.7064 12.2932C17.6136 12.2003 17.5034 12.1265 17.382 12.0762C17.2607 12.0259 17.1307 12 16.9994 12C16.868 12 16.738 12.0259 16.6167 12.0762C16.4953 12.1265 16.3851 12.2003 16.2924 12.2932L14.6984 13.8872C13.9594 13.6672 12.5804 13.1672 11.7064 12.2932C10.8324 11.4192 10.3324 10.0402 10.1124 9.3012L11.7064 7.7072C11.7993 7.61441 11.873 7.50421 11.9234 7.38289C11.9737 7.26158 11.9996 7.13153 11.9996 7.0002C11.9996 6.86887 11.9737 6.73882 11.9234 6.61751C11.873 6.49619 11.7993 6.38599 11.7064 6.2932L7.70636 2.2932C7.61357 2.20026 7.50337 2.12652 7.38205 2.07621C7.26074 2.0259 7.13069 2 6.99936 2C6.86802 2 6.73798 2.0259 6.61666 2.07621C6.49535 2.12652 6.38515 2.20026 6.29236 2.2932L3.58036 5.0052C3.20036 5.3852 2.98636 5.9072 2.99436 6.4402C3.01736 7.8642 3.39436 12.8102 7.29236 16.7082C11.1904 20.6062 16.1364 20.9822 17.5614 21.0062H17.5894C18.1174 21.0062 18.6164 20.7982 18.9944 20.4202L21.7064 17.7082C21.7993 17.6154 21.873 17.5052 21.9234 17.3839C21.9737 17.2626 21.9996 17.1325 21.9996 17.0012C21.9996 16.8699 21.9737 16.7398 21.9234 16.6185C21.873 16.4972 21.7993 16.387 21.7064 16.2942L17.7064 12.2932ZM17.5794 19.0052C16.3314 18.9842 12.0614 18.6492 8.70636 15.2932C5.34036 11.9272 5.01436 7.6422 4.99436 6.4192L6.99936 4.4142L9.58536 7.0002L8.29236 8.2932C8.17482 8.41065 8.0884 8.55554 8.04091 8.71477C7.99342 8.874 7.98636 9.04256 8.02036 9.2052C8.04436 9.3202 8.63136 12.0472 10.2914 13.7072C11.9514 15.3672 14.6784 15.9542 14.7934 15.9782C14.9559 16.0132 15.1246 16.0067 15.284 15.9593C15.4434 15.9119 15.5883 15.8252 15.7054 15.7072L16.9994 14.4142L19.5854 17.0002L17.5794 19.0052Z" fill="#1A0E31"/>
                        </svg>
                        <p class="text-color--deep_purple">
                            {{ section.settings.phone_text }}
                        </p>
                    </div>
                {% endif %}
                {% if section.settings.show_address %}
                    <div class="with-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <path d="M12.0001 14C14.2061 14 16.0001 12.206 16.0001 10C16.0001 7.794 14.2061 6 12.0001 6C9.79406 6 8.00006 7.794 8.00006 10C8.00006 12.206 9.79406 14 12.0001 14ZM12.0001 8C13.1031 8 14.0001 8.897 14.0001 10C14.0001 11.103 13.1031 12 12.0001 12C10.8971 12 10.0001 11.103 10.0001 10C10.0001 8.897 10.8971 8 12.0001 8Z" fill="#1A0E31"/>
                            <path d="M11.4201 21.814C11.5893 21.9349 11.7921 21.9998 12.0001 21.9998C12.2081 21.9998 12.4108 21.9349 12.5801 21.814C12.8841 21.599 20.0291 16.44 20.0001 10C20.0001 5.589 16.4111 2 12.0001 2C7.58909 2 4.00009 5.589 4.00009 9.995C3.97109 16.44 11.1161 21.599 11.4201 21.814ZM12.0001 4C15.3091 4 18.0001 6.691 18.0001 10.005C18.0211 14.443 13.6121 18.428 12.0001 19.735C10.3891 18.427 5.97909 14.441 6.00009 10C6.00009 6.691 8.69109 4 12.0001 4Z" fill="#1A0E31"/>
                        </svg>
                        <p class="text-color--deep_purple">
                            {{ section.settings.address_text }}
                        </p>
                    </div>
                {% endif %}
            </div>
            <div class="right-side-box">
                {% form 'contact', id: 'ContactForm', class: 'isolate scroll-trigger animate--slide-in' %}
                    <div class="field-row">
                        <div class="half-field">
                            <label for="ContactForm-first-name" class="text-color--deep_purple field-label">First Name
                                <input
                                    class="field-input"
                                    autocomplete="name"
                                    type="text"
                                    id="ContactForm-first-name"
                                    name="contact[{{ 'templates.contact.form.name' | t }}]"
                                    value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
                                >
                            </label>
                        </div>
                        <div class="half-field">
                            <label for="ContactForm-last-name" class="text-color--deep_purple field-label">Last Name
                                <input
                                    class="field-input"
                                    autocomplete="name"
                                    type="text"
                                    id="ContactForm-last-name"
                                    name="contact[{{ 'templates.contact.form.name' | t }}]"
                                    value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
                                >
                            </label>
                        </div>
                    </div>
                    <div class="field-row">
                        <div class="half-field">
                            <label for="ContactForm-email" class="text-color--deep_purple field-label">Email
                                <input
                                    autocomplete="email"
                                    type="email"
                                    id="ContactForm-email"
                                    class="field-input"
                                    name="contact[email]"
                                    spellcheck="false"
                                    autocapitalize="off"
                                    value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                                    aria-required="true"
                                    {% if form.errors contains 'email' %}
                                        aria-invalid="true"
                                        aria-describedby="ContactForm-email-error"
                                    {% endif %}
                                >
                                {%- if form.errors contains 'email' -%}
                                    <small class="contact__field-error" id="ContactForm-email-error">
                                        <span class="visually-hidden">{{ 'accessibility.error' | t }}</span>
                                        <span class="form__message">
                                        {%- render 'icon-error' -%}
                                        {{- form.errors.translated_fields.email | capitalize }}
                                        {{ form.errors.messages.email -}}
                                        </span>
                                    </small>
                                {%- endif -%}
                            </label>
                        </div>
                        <div class="half-field">
                            <label for="ContactForm-phone" class="text-color--deep_purple field-label">Phone Number
                                <input
                                    type="tel"
                                    id="ContactForm-phone"
                                    class="field-input"
                                    autocomplete="tel"
                                    name="contact[{{ 'templates.contact.form.phone' | t }}]"
                                    pattern="[0-9\-]*"
                                    value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
                                >
                            </label>
                        </div>
                    </div>
                    <div class="full-field">
                        <label for="ContactForm-Select" class="text-color--deep_purple field-label">Choose a topic
                            <select name="contact-select" id="ContactForm-Select" class="field-select">
                                <option value="">Select one...</option>
                                    <option value="First Option">First Option</option>
                                    <option value="Second Option">Second Option</option>
                                    <option value="Third Option">Third Option</option>
                            </select>
                        </label>
                    </div>
                    <div class="full-field">
                        <p class="radio-label text-color--deep_purple field-label">Which best describes you?</p>
                        <div class="contact-radio__box">
                            <label for="choice-radio-1" class="drop-radio__label text-color--deep_purple">
                                <input type="radio" name="choice-radio" id="choice-radio-1" value="First choice">First choice
                            </label>
                            <label for="choice-radio-2" class="drop-radio__label text-color--deep_purple">
                                <input type="radio" name="choice-radio" id="choice-radio-2" value="Second choice">Second choice
                            </label>
                            <label for="choice-radio-3" class="drop-radio__label text-color--deep_purple">
                                <input type="radio" name="choice-radio" id="choice-radio-3" value="Third choice">Third choice
                            </label>
                            <label for="choice-radio-4" class="drop-radio__label text-color--deep_purple">
                                <input type="radio" name="choice-radio" id="choice-radio-4" value="Fourth choice">Fourth choice
                            </label>
                            <label for="choice-radio-5" class="drop-radio__label text-color--deep_purple">
                                <input type="radio" name="choice-radio" id="choice-radio-5" value="Fifth choice">Fifth choice
                            </label>
                            <label for="choice-radio-6" class="drop-radio__label text-color--deep_purple">
                                <input type="radio" name="choice-radio" id="choice-radio-6" value="Other">Other
                            </label>
                        </div>
                    </div>
                    <div class="full-field">
                        <div class="contact-comment__box">
                            <label for="ContactForm-body" class="text-color--deep_purple field-label">Message
                                <textarea
                                    rows="50%"
                                    id="ContactForm-body"
                                    class="text-area field__input field-input"
                                    name="contact[{{ 'templates.contact.form.comment' | t }}]"
                                    placeholder="Type your message..."
                                >
                                {{- form.body -}}
                                </textarea>
                            </label>
                        </div>
                    </div>
                    <div class="contact-agree__row">
                        <label for="checkbox-agree" class="text-color--deep_purple field-label">
                            <input type="checkbox" name="agree" id="checkbox-agree" class="field-input">I agree the <a href="/pages/terms-and-condition">Terms</a>
                        </label>
                    </div>
                    <div class="contact__button">
                        <button type="submit" class="button button--primary">
                            Submit
                        </button>
                    </div>
                {% endform %}
            </div>
        </div>
    </div>
</section>

{% schema %}
{
    "name": "Contact Form V2",
    "settings": [
        {
            "type": "image_picker",
            "id": "block_image",
            "label": "Image Logo"
        },
        {
            "type": "text",  
            "id": "up_text",
            "default": "<p>The Ultimate Build</p>",
            "label": "Message before header"
        },
        {
            "type": "inline_richtext",
            "id": "heading",
            "label": "t:sections.newsletter.blocks.heading.settings.heading.label"
        },
        {
            "type": "select",
            "id": "heading_size",
            "options": [
                {
                    "value": "h3",
                    "label": "t:sections.all.heading_size.options__1.label"
                },
                {
                    "value": "h2",
                    "label": "t:sections.all.heading_size.options__2.label"
                },
                {
                    "value": "h1",
                    "label": "t:sections.all.heading_size.options__3.label"
                }
            ],
            "default": "h2",
            "label": "t:sections.all.heading_size.label"
        },
        {
            "type": "richtext",  
            "id": "sub_text",
            "default": "t:sections.newsletter.blocks.paragraph.settings.paragraph.default",
            "label": "t:sections.newsletter.blocks.paragraph.settings.paragraph.label"
        },
        {
            "type": "text",  
            "id": "email_text",
            "label": "E-mail"
        },
        {
            "type": "checkbox",
            "id": "show_email",
            "default": true,
            "label": "Show E-mail"
        },
        {
            "type": "text",  
            "id": "phone_text",
            "label": "Phone Number"
        },
        {
            "type": "checkbox",
            "id": "show_phone",
            "default": true,
            "label": "Show Phone Number"
        },
        {
            "type": "text",  
            "id": "address_text",
            "label": "Address"
        },
        {
            "type": "checkbox",
            "id": "show_address",
            "default": true,
            "label": "Show Address"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 150,
            "step": 5,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 65
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 150,
            "step": 5,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 110
        }
    ],
    "presets": [
        {
            "name": "Contact Form V2"
        }
    ]
}
{% endschema %}